// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id @unique @default(cuid())
  username     String   
  email        String        @unique
  imgUrl       String
  joined       DateTime
  recruitments Recruitment[]
}

model Recruitment {
  id          String      @id @unique @default(cuid())
  creator     User        @relation(fields: [creatorId], references: [id])
  creatorId   String
  position    String
  description String
  createdAt   DateTime
  candidates  Candidate[]

  @@index([creatorId])
}

model Candidate {
  id             String         @id @unique @default(cuid())
  recruitment    Recruitment    @relation(fields: [recruitmentId], references: [id])
  recruitmentId  String
  cvUrl          String         @unique
  rating         Rating         @default(UNCHECKED)
  forInterview   Boolean        @default(false)
  interviewStage InterviewStage @default(NO_REPLY)
  email          String         @unique
  name           String
  description    String?         

  @@index([recruitmentId])
}

enum Rating {
  NO
  UNCHECKED
  YES
  STRONG_YES
}

enum InterviewStage {
  NO_REPLY
  SCHEDULED
  COMPLETED
}